	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.felix</groupId>
				<artifactId>maven-bundle-plugin</artifactId>
				<extensions>true</extensions>
				<configuration>
					<encoding>UTF-8</encoding>
					<supportedProjectTypes>
						<supportedProjectType>ejb</supportedProjectType>
						<supportedProjectType>jar</supportedProjectType>
						<supportedProjectType>bundle</supportedProjectType>
						<supportedProjectType>war</supportedProjectType>
					</supportedProjectTypes>
					<instructions>
						<Import-Package>${osgi-import-package}</Import-Package>
						<Export-Package>${osgi-export-package}</Export-Package>
						<DynamicImport-Package>${osgi-dynamicimport-package}</DynamicImport-Package>
						<Private-Package>${osgi-private-package}</Private-Package>
						<Bundle-Blueprint>WEB-INF/classes/OSGI-INF/blueprint/*.xml</Bundle-Blueprint>
						<Bundle-ClassPath>${osgi-bundle-classpath}</Bundle-ClassPath>
						<Web-ContextPath>${osgi-web-contextpath}</Web-ContextPath>
						<!-- <Embed-Dependency>*;scope=runtime;inline=false</Embed-Dependency> -->
						<!-- <Embed-Dependency>*;scope=compile|runtime;inline=true</Embed-Dependency> -->
						<!-- <Embed-Dependency>*</Embed-Dependency> -->
					</instructions>
				</configuration>

				<executions>
					<execution>
						<id>bundle-manifest</id>
						<phase>process-classes</phase>
						<goals>
							<goal>manifest</goal>
						</goals>
					</execution>
					<execution>
						<id>bundle-install</id>
						<phase>install</phase>
						<goals>
							<goal>install</goal>
						</goals>
					</execution>
				</executions>
			</plugin>

			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-war-plugin</artifactId>
				<version>2.1-alpha-1</version>
				<configuration>
					<encoding>UTF-8</encoding>
					<archive>
						<!-- add bundle plugin generated manifest to the war -->
						<manifestFile>
							${project.build.outputDirectory}/META-INF/MANIFEST.MF
						</manifestFile>
						<!-- For some reason, adding Bundle-ClassPath in maven-bundle-plugin 
							confuses that plugin and it generates wrong Import-Package, etc. So, we generate 
							it here. -->
						<manifestEntries>
							<Bundle-ClassPath>WEB-INF/classes/</Bundle-ClassPath>
						</manifestEntries>
					</archive>
					<warSourceExcludes>*/lib/*.jar</warSourceExcludes>
					<!-- <warSourceIncludes>*/lib/com.springsource.freemarker-2.3.15.jar</warSourceIncludes> -->
					<webResources>
						<resource>
							<!-- 元配置文件的目录，相对于pom.xml文件的路径 -->
							<directory>src/main/webapp/WEB-INF</directory>
							<!-- 是否过滤文件，也就是是否启动auto-config的功能 -->
							<filtering>true</filtering>
							<!-- 目标路径 -->
							<targetPath>WEB-INF</targetPath>
						</resource>
					</webResources>
					<failOnMissingWebXml>false</failOnMissingWebXml>
				</configuration>

			</plugin>
		</plugins>
	</build>
